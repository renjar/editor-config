// Place your settings in this file to overwrite the default settings
// See http://go.microsoft.com/fwlink/?LinkId=808995 for the most commonly used settings.
{

// Editor

    "editor.rulers": [80],
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.detectIndentation":false,
    "editor.wrappingColumn": 0,
    "editor.wrappingIndent": "indent",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    // "diffEditor.ignoreTrimWhitespace": false,


// Emmet

    "emmet.syntaxProfiles": {
        "javascript": "html",
        "html": {
            "self_closing_tag": "xhtml"
        }
    },


// Workbench

    "workbench.editor.enablePreviewFromQuickOpen": false,


// Window

    "window.openFilesInNewWindow": false,
    "window.showFullPath": true,


// Files

    "files.associations": {
        "*.jsp": "java"
    },
    "files.eol": "\n",
    // "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // "files.hotExit": false,


// Git

    "git.confirmSync": false,


// TypeScript

    "typescript.useCodeSnippetsOnMethodSuggest": true,


// Bookmarks Configuration

    // "bookmarks.saveBookmarksBetweenSessions": true,
    "bookmarks.useStickyBookmarks": true,


// Document This configuration

    "docthis.includeDescriptionTag": true
}
